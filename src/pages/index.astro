---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import About from '../components/About.astro';
import Services from '../components/Services.astro';
import Certifications from '../components/Certifications.astro';
import Gallery from '../components/Gallery.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />

  <!-- AGREGADO: id="inicio" en la primera sección -->
  <section id="inicio" class="relative min-h-screen flex flex-col lg:flex-row bg-[#10367D] overflow-hidden">
    
    <div class="w-full lg:w-[50%] bg-[#10367D] flex flex-col justify-center px-8 sm:px-12 lg:px-20 pt-48 pb-20 lg:pt-32 relative z-20">
      
      <div class="absolute inset-0 opacity-10 bg-[radial-gradient(circle_at_top_left,_white_1px,_transparent_1px)] bg-[size:24px_24px]"></div>

      <div class="relative mt-10">
        <span class="inline-block py-1 px-3 rounded bg-sky-500/20 text-sky-300 text-xs font-bold tracking-[0.2em] uppercase mb-6 border border-sky-500/30 font-outfit">
          Disponible 24/7 en Lima
        </span>

        <h1 class="text-6xl lg:text-8xl font-bold text-white leading-[0.9] mb-4 font-outfit tracking-tight">
          AGUA <br/>
          POTABLE <br/>
          <span class="text-sky-400">INDUSTRIAL</span>
        </h1>

        <h2 class="text-3xl md:text-[29px] font-bold text-[#ffc24c] mb-8 font-outfit tracking-wide">
          Expertos en Tratamiento & Distribución
        </h2>

        <div class="w-24 h-2 bg-sky-500 mb-8"></div>

        <p class="text-xl text-slate-200 leading-relaxed mb-10 max-w-lg border-l-4 border-white/20 pl-6 font-light">
          Abastecimiento estratégico para obras, minería y consumo humano. 
          Flota certificada con monitoreo en tiempo real.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="https://wa.me/51963751896" class="px-8 py-4 bg-sky-500 text-white hover:bg-sky-400 font-bold rounded shadow-lg transition-all hover:-translate-y-1 text-center min-w-[180px]">
            COTIZAR AHORA
          </a>
          <a href="#servicios" class="px-8 py-4 border border-white/30 text-white hover:bg-white/10 font-bold rounded transition-all text-center min-w-[180px]">
            VER FLOTA
          </a>
        </div>
      </div>
    </div>

    <div class="w-full lg:w-[50%] h-[50vh] lg:h-screen relative overflow-hidden group">
      <div class="absolute inset-0 bg-gradient-to-r from-[#10367D] via-[#10367D]/40 to-transparent z-10 lg:w-1/4"></div>
      
      <img 
        src="/cisterna.jpg" 
        alt="Camión Cisterna Bricia" 
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-[2s] group-hover:scale-105"
      />
    </div>

  </section>

  <div class="relative z-10 bg-white">
    <About />
    <Services />
    <Certifications />
    <Gallery />
    <Footer />
  </div>
</Layout>