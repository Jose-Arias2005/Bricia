---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import About from '../components/About.astro';
import Services from '../components/Services.astro';
import Certifications from '../components/Certifications.astro';
/* Asegúrate de que la ruta sea correcta según donde guardaste el archivo JSX */
import GaleriaInteractiva from '../components/GaleriaInteractiva.jsx'; 
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />

  <section id="inicio" class="relative min-h-screen flex flex-col lg:flex-row bg-[#10367D] overflow-hidden">
    
    <div class="w-full lg:w-[50%] bg-[#10367D] flex flex-col justify-center px-8 sm:px-12 lg:px-20 pt-48 pb-20 lg:pt-32 relative z-20">

      <div class="relative mt-10">
        <span class="inline-block py-1 pl-4 pr-3 rounded-full bg-sky-500 text-white text-xs font-bold tracking-[0.3em] uppercase mb-6 border border-sky-500 font-outfit text-center">
          Disponible 24/7 en Lima
        </span>

        <h1 class="text-6xl lg:text-8xl font-bold text-white leading-[0.95] mb-4 font-outfit tracking-tight">
          VENTA DE AGUA <br/>
          <span class="text-sky-400">POTABLE EN LIMA</span>
        </h1>

        <h2 class="text-3xl md:text-[21.8px] font-bold text-[#ffc24c] mb-8 font-outfit tracking-wide">
          Expertos en Tratamiento & Distribución
        </h2>

        <p class="text-xl text-slate-200 leading-relaxed mb-10 max-w-lg font-light">
          Abastecimiento estratégico para obras, minería y consumo humano.
          Flota certificada con monitoreo en tiempo real.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          
          <a href="https://wa.me/51963751896" 
             class="group relative overflow-hidden px-8 py-4 bg-[#ffc24c] rounded-lg shadow-lg min-w-[180px] inline-flex items-center justify-center transition-all hover:-translate-y-1 hover:shadow-sky-500/50">
            
            <span class="relative z-10 font-bold text-[#10367D] group-hover:text-white transition-colors duration-300 delay-75">
              COTIZAR AHORA
            </span>

            <div class="absolute inset-0 bg-sky-500 translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-out z-0"></div>
            
          </a>
          <a href="#galeria" class="px-8 py-4 border border-white/30 text-white hover:bg-white/10 font-bold rounded-lg transition-all text-center min-w-[180px]">
            VER FLOTA
          </a>
        </div>
      </div>
    </div>

    <div class="w-full lg:w-[50%] h-[50vh] lg:h-screen relative overflow-hidden group bg-slate-900">
      <div class="absolute inset-0 bg-gradient-to-r from-[#10367D] via-[#10367D]/40 to-transparent z-10 lg:w-1/4 pointer-events-none"></div>
      
      <div class="absolute inset-0 flex items-center justify-center bg-slate-800 border-4 border-dashed border-slate-600 m-12 rounded-3xl z-0">
         <span class="text-slate-400 font-bold text-xl text-center px-4">
           [Espacio para Imagen Principal] <br/>
           <span class="text-sm font-normal opacity-70">Tamaño sugerido: 1920x1080px</span>
         </span>
         </div>

    </div>

  </section>

  <div class="relative z-10 bg-white">
    <About />
    <Services />
    <Certifications />
    
    <section id="galeria">
      <GaleriaInteractiva client:visible />
    </section>

    <Footer />
  </div>
</Layout>