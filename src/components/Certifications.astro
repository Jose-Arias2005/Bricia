---
import { Image } from 'astro:assets';

import iconSedapal from '../icons/iconos-02.svg';
import iconDigesa from '../icons/iconos-03.svg';
import iconSctr from '../icons/iconos-01.svg';
import iconFactura from '../icons/iconos-04.svg';

const certificaciones = [
  { t: "CERTIFICADO", s: "DESINFECCIÓN AL DÍA", icon: iconSedapal },
  { t: "DIGESA", s: "REGISTRO SANITARIO", icon: iconDigesa },
  { t: "SCTR", s: "PERSONAL ASEGURADO", icon: iconSctr },
  { t: "FACTURACIÓN", s: "FORMALIDAD 100%", icon: iconFactura }
];
---

<section id="certificaciones" class="py-24 bg-[#10367D] relative overflow-hidden">
  
  {/* Fondo sutil de ondas (SVG background opcional para textura) */}


  <div class="max-w-7xl mx-auto px-6">
    
    <div class="text-center mb-20">
      <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6 font-outfit">
        Garantía y Confianza
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {certificaciones.map((c) => (
        
        // EL CONTENEDOR (La forma de gota estilizada)
        <div class="group relative w-full aspect-[3/4] max-w-[260px] mx-auto cursor-default">
            
          {/* 1. EL FONDO (MÁSCARA DE RECORTE) */}
          {/* Usamos rounded-tr y rounded-bl exagerados para dar forma de gota/hoja */}
          <div class="
            absolute inset-0 
            bg-[#0B2559] 
            border-2 border-[#38BDF8]/30
            rounded-tl-[20px] rounded-br-[20px] 
            rounded-tr-[100px] rounded-bl-[100px] 
            overflow-hidden 
            shadow-xl shadow-black/20
            transition-all duration-500
            group-hover:-translate-y-2 group-hover:shadow-sky-500/20
          ">
            
            {/* 2. EFECTO DE LLENADO DE AGUA (WAVE FILL) */}
            {/* Este div está abajo (translate-y-full) y sube al hacer hover */}
            <div class="
                absolute inset-0 
                bg-gradient-to-t from-sky-600 to-sky-400 
                translate-y-full group-hover:translate-y-0 
                transition-transform duration-700 ease-in-out
            "></div>

            {/* 3. EL CONTENIDO (Texto e Icono) */}
            <div class="relative z-10 h-full flex flex-col items-center justify-center p-6 text-center">
                
                {/* Círculo blanco detrás del icono para que resalte */}
                <div class="
                    w-20 h-20 mb-6 
                    bg-white rounded-full 
                    flex items-center justify-center
                    shadow-lg shadow-black/10
                    group-hover:scale-110 transition-transform duration-500 delay-100
                ">
                    <Image 
                      src={c.icon} 
                      alt={c.t} 
                      class="w-10 h-10 object-contain" 
                    />
                </div>

                <h3 class="text-xl font-bold text-white mb-2 font-outfit uppercase group-hover:text-white transition-colors">
                    {c.t}
                </h3>
                
                <p class="text-sky-200 text-xs font-bold tracking-[0.2em] group-hover:text-sky-100">
                    {c.s}
                </p>
            </div>
          </div>

          {/* Elemento Decorativo: Gotita pequeña flotando arriba a la derecha */}
          <div class="
            absolute -top-2 -right-2 
            w-6 h-6 rounded-full bg-sky-400 
            opacity-0 group-hover:opacity-100 
            transition-all duration-500 delay-200
            animate-bounce
          "></div>

        </div>
      ))}
    </div>
  </div>
</section>