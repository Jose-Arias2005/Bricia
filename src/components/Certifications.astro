---
import { Image } from 'astro:assets';

// 1. Importamos los archivos
import iconSedapal from '../icons/iconos-02.svg';
import iconDigesa from '../icons/iconos-03.svg';
import iconSctr from '../icons/iconos-01.svg';
import iconFactura from '../icons/iconos-04.svg';

// 2. Array de objetos
const certificaciones = [
  { t: "CERTIFICADO DE DESINFECCIÓN", s: "AL DÍA", icon: iconSedapal },
  { t: "DIGESA", s: "Registro Sanitario", icon: iconDigesa },
  { t: "SCTR", s: "Personal Asegurado", icon: iconSctr },
  { t: "FACTURACIÓN", s: "Formalidad 100%", icon: iconFactura }
];
---

<section id="certificaciones" class="py-32 bg-[#10367D] text-white">
  <div class="max-w-7xl mx-auto px-6 text-center">
    
    <h2 class="text-5xl font-bold mb-16 flex items-center justify-center gap-4">
      Documentación y Garantía
    </h2>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-10">
      {certificaciones.map(c => (
        <div class="
            group 
            relative 
            p-6 
            bg-white/5 
            border border-white/10 
            backdrop-blur-sm 
            hover:bg-white/10 transition-all duration-300
            
            rounded-full       
            aspect-square      
            flex flex-col items-center justify-center
            mx-auto w-full max-w-[280px]
        ">
          
          <div class="mb-6 transform group-hover:scale-110 transition-transform duration-300">
            <Image 
              src={c.icon} 
              alt={`Icono de ${c.t}`} 
              class="w-20 h-20 object-contain" 
            />
          </div>
          
          <div class="font-bold text-xl mb-1">{c.t}</div>
          <div class="text-sm text-[#38BDF8] uppercase tracking-widest">{c.s}</div>
        </div>
      ))}
    </div>
  </div>
</section>